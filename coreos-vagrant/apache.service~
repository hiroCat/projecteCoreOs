[Unit]
Description=My Advanced Service

#Requirements
Requires=etcd.service
Requires=docker.service
Requires=apache-discovery.1.service

#Depency ordering
After=etcd.service
After=docker.service
Before=apache-discovery.1.service

[Service]
TimeoutStartSec=0
KillMode=none
EnvironmentFile=/etc/environment

ExecStartPre=-/usr/bin/docker kill apache
ExecStartPre=-/usr/bin/docker rm apache
ExecStartPre=/usr/bin/docker pull coreos/apache
ExecStart=/usr/bin/docker run --name apache -p ${COREOS_PUBLIC_IPV4}:80:80 \ coreos/apache /usr/sbin/apache2ctl -D FOREGROUND
#ExecStartPost=/usr/bin/etcdctl set /domains/example.com/10.10.10.123:8081 running
ExecStop=/usr/bin/docker stop apache
#ExecStopPost=/usr/bin/etcdctl rm /domains/example.com/10.10.10.123:8081

[X-Fleet]
X-Conflicts=apache.*.service

#[Install]
#WantedBy=multi-user.target
